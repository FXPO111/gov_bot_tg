# Core
ENV=dev
LOG_LEVEL=INFO

# Admin
ADMIN_TOKEN=change-me-please

# Postgres / Redis
POSTGRES_USER=yourbot
POSTGRES_PASSWORD=yourbot
POSTGRES_DB=yourbot
DATABASE_URL=postgresql+psycopg2://yourbot:yourbot@postgres:5432/yourbot
REDIS_URL=redis://redis:6379/0

# OpenAI (placeholders only)
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4.1-mini
OPENAI_EMBED_MODEL=text-embedding-3-small
EMBED_DIM=1536
OPENAI_TIMEOUT_S=60
OPENAI_MAX_RETRIES=3

# Ingest / retrieval
HTTP_TIMEOUT_S=45
CHUNK_SIZE_CHARS=1200
CHUNK_OVERLAP_CHARS=200
RETRIEVAL_K=6
MAX_CONTEXT_CHARS=14000

# Telegram bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
API_BASE_URL=http://api:8000
API_TIMEOUT_S=45
